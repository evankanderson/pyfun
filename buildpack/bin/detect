#!/usr/bin/env bash

plan=$2

cat >$plan <<EOF
[[provides]]
name = "func-framework"

[[requires]]
# The build requires pip
name = "site-packages"

# We only need pip during the install process
[requires.metadata]
build = true

[[requires]]
name = "func-framework"
EOF

echo "TODO: actual dection."
echo "Assuming function framework..."

exit 0
